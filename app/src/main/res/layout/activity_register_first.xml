<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpink"
    tools:context=".login.RegisterFirstActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:text="회원가입"
            android:fontFamily="@font/nanumeb"

            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21111"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumb"
                android:textColor="@color/black"

                android:text="아이디" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="아이디입력 (email형식)"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:fontFamily="@font/nanumb"

                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:shadowColor="#EAEAEA"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewCheckEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="23dp"
            android:fontFamily="@font/nanumb"

            android:text="이미 사용 중인 아이디입니다."
            android:visibility="invisible"
            android:textStyle="bold"
            android:textColor="#bc5253" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView211"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/nanumb"
                android:textColor="@color/black"

                android:textSize="18sp"
                android:textStyle="bold"
                android:text="닉네임" />


            <EditText
                android:id="@+id/editNickName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="닉네임 입력"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:fontFamily="@font/nanumb"

                android:paddingBottom="13dp"
                android:shadowColor="#EAEAEA"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtViewCheckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="23dp"
            android:text="이미 사용 중인 닉네임입니다."
            android:textStyle="bold"
            android:visibility="invisible"
            android:textColor="#bc5253" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="비밀번호 입력"
            android:fontFamily="@font/nanumb"

            android:inputType="text|textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:shadowColor="#EAEAEA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtViewCheckPassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="4~12자 사이로 입력해 주세요."
            android:textColor="#bc5253"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/editPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:fontFamily="@font/nanumb"

            android:inputType="text|textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:shadowColor="#EAEAEA"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtViewCheckPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:textColor="#bc5253"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#FF7285"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:fontFamily="@font/nanumeb"
            android:text="다음"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

    </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="#F44336"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>