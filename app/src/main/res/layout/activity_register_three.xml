<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpink"

    tools:context=".login.RegisterThreeActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="736dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/nanumeb"
            android:layout_marginTop="110dp"
            android:text="목표 칼로리를"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:fontFamily="@font/nanumeb"

            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="계산해 드렸어요"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nanumb"

                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="일일권장 섭취량은 "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtKcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/nanumeb"

                android:textColor="#bc5253"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 예요"
                android:fontFamily="@font/nanumb"

                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumb"

            android:text="다이어트를 위한 목표량을 직접 입력할 수도 있어요"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:text="목표 섭취 열량"
            android:fontFamily="@font/nanumb"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editKcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="30dp"
            android:background="@drawable/border"
            android:fontFamily="@font/nanumb"

            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="kcal"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#FF7285"
            android:paddingTop="12dp"
            android:fontFamily="@font/nanumb"

            android:paddingBottom="12dp"
            android:text="다음"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="397dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>