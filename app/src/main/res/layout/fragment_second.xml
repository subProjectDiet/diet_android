<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mcv_showOtherDates="defaults" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/border_dark_gray"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendarview">


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/nanumeb"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:textSize="17sp"
                    android:text="0000년 00월 0일" />

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="월별통계" />

                <LinearLayout
                    android:id="@+id/btndiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_hotpink"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/nanumeb"
                        android:padding="7dp"
                        android:text="오늘의 Diary"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumeb"
                        android:gravity="right"

                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="작성하러가기"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"

                        android:src="@drawable/white_baseline_arrow_forward_ios_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/border_whitepink"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView82"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumeb"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"

                        android:text="오늘 나의 몸무게" />

                    <TextView
                        android:id="@+id/txtWeight"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/nanumeb"

                        android:text="00 kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/border_whitepink"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumeb"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"

                        android:text="오늘 나의 섭취 칼로리" />

                    <TextView
                        android:id="@+id/txtKcal"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/nanumeb"

                        android:text="00 kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/border_whitepink"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView81"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumeb"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"

                        android:text="오늘 나의 운동 칼로리" />

                    <TextView
                        android:id="@+id/txtExercise"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/nanumeb"

                        android:text="00 kg" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</FrameLayout>